<h1>Heroes</h1>

{{#if addingHero}}

<form>
  <div class="form-group">
    <label for="name">Name:</label>
    {{input id="name" class="form-control" value=name}}
  </div>

  <div class="form-group">
    <label for="primary-stat">Primary Stat:</label>
    {{view "select" content=primaryStats}}
  </div>

  <div class="form-group">
    {{#each primaryStats}}

      <label for=this>{{this}}:</label>
      {{input type="checkbox" name=this}}

    {{/each}}
  </div>
</form>

{{else}}

  <button class='btn btn-info' {{action 'addHero'}}>Create New Hero</button>

{{/if}}
